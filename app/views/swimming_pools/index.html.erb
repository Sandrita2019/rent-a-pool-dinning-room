<div class="home-banner">
  <div class="container banner-text">
    <h1 class="header-home">Rent&#183;a&#183;Pool  🏊‍♀️</h1>
    <p class="text-home">Paradise just around the corner</p>

    <%= form_tag swimming_pools_path, method: :get do %>
      <div class="search-form">
        <%= text_field_tag :query,
          params[:query],
          class: "search-bar form-control",
          placeholder: "Find a swimming pool near you"
        %>
        <%= submit_tag "Search", class: "btn btn-search" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <h2 class="section-title">Our swimming pools 💦</h2>
  <div class="row justify-content-between">
      <% @swimming_pools.each do |swimming_pool| %>
        <div class="col-4">
          <%= link_to swimming_pool_path(swimming_pool), class: "card" do %>
          <% if swimming_pool.photo.attached?  %>
            <%= cl_image_tag swimming_pool.photo.key, class: "card-img-top card-pool-img"%>
          <% end %>
              <div class="card-body">
                <h5 class="card-pool-title"><%= swimming_pool.title %> 🏝</h5>
                <p class="card-pool-text">
                  <i class="fas fa-map-marker-alt"></i>
                  <%= swimming_pool.location %>
                </p>
                <p class="card-pool-text">
                  <i class="fas fa-swimmer"></i>
                  <%= swimming_pool.capacity %>
                </p>
              </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
