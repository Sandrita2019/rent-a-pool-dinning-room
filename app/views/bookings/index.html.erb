<div class="container">
  <div class="top">
    <h1>My bookings</h1>
    <br>
    <h2>Upcoming bookings</h2>
  </div>
  <br>
  <br>
  <div class="pt-6 container">
    <div class="row justify-content-between">
        <% @bookings.each do |booking| %>
          <div class="card main-card">
            <%= cl_image_tag booking.swimming_pool.photo.key, alt: "luxurious pool", class: "img-show main-image" %>
              <div class="card-body">
                <h5 class="card-pool-title"><%= booking.swimming_pool.title %> üèù</h5>
                <div class="row justify-content-between">
                </div>
                <p class="card-pool-text">
                  <i class="fas fa-map-marker-alt"></i>
                  <%= booking.swimming_pool.location %>
                </p>
                <p class="card-pool-text">
                  <i class="fas fa-swimmer"></i>
                  <%= booking.swimming_pool.capacity %>
                </p>
                <p class="card-pool-text">
                  <i class="fas fa-calendar-week"></i>
                  <%= booking.date %>
                </p>
                <p class="card-pool-text">
                  <i class="fas fa-user-friends"></i>
                  <%= booking.number_people %>
                </p>
                <p class="card-pool-text">
                  <i class="fas fa-comments"></i>
                  <%= booking.message %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
